<%#
name: Power Action - SSH Default
job_category: Power
description_format: "%{action} host"
snippet: false
template_inputs:
- name: action
  required: true
  input_type: user
  description: Action to perform on the service
  options: |-
    restart
    shutdown
  advanced: false
provider_type: SSH
kind: job_template
%>

echo <%= input('action') %> host && sleep 3
<%= case input('action')
      when 'restart'
        'reboot'
      else
        'shutdown -h now'
      end %>